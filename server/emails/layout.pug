html
  head
    style(type="text/css").
      .body {
        font-family: 'IBM Plex Sans', 'Helvetica Neue', Arial, sans-serif;
        color: #5d5d5d;      
      }

      .header {
        width: 100%;
      }

      h4.title {
        font-size: 2em;
        font-weight: normal;
        margin-bottom: .74em;
      }

      hr {
        margin: 0em;
        padding: 0em;
        width: 100%;
      }

      h4.ambassador {
        font-size: 1.5em;
        font-weight: normal;
        margin: .8em 0 .2em;
      }

      p.name {
        font-size: 1.3em;
        padding: 0em .8em;
        margin: 0em;
      }

      p.message {
        font-size: 1.5em;
      }

      .human-message {
        font-style: italic;
        font-weight: 300;
      }

      a {
        text-decoration: none;
        color: inherit;
      }

      .blue-link {
        color: #4e91e4;
      }

      .event-title {
        font-weight: 300; 
      }

      /* Events cards */

      .events-list {
        display: flex;
        flex-direction: column;
      }

      .event-card {
        border-radius: 6px;
        background-color: #ffffff;
        box-shadow: 0 0 5px 1px rgba(204, 204, 204, 0.5);
        border: 1px solid rgba(0, 0, 0, 0.125);
        min-height: 60px;
        margin-bottom: 10px;
        display: flex;
        padding: 1.5em;
        max-width: 700px;
        width: 94%;
      }

      .text-uppercase {
        text-transform: uppercase;
      }

      .mini-calendar {
        margin-top: 5px;
        padding: 0.6em 0.9em;  
        border-radius: 6px;
        text-align: center;
        background-color: #f4f4f4;
        line-height: 1em;
        display: flex;
        flex-direction: column;
        justify-content: space-evenly;
      }

      .mini-calendar .date-number {
        font-weight: 700;
        font-size: 1.8em;
        line-height: 1em;
      }

      .mini-calendar .date-month {
        font-weight: 450;
        font-size: 1.2em; 
      }

      .names-container {
        display: flex;
        flex-direction: column;
        margin-left: 2em;
        margin-right: 2em;
        width: 400px;
      }

      .event-card .event-title {
        font-weight: 700;
        font-size: 2em;
        color: #5d5d5d;
      }

      .event-card .am-name {
        font-weight: 400;
        font-size: 1.2em;
        margin-top: 5px;
      }

      .location-container {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        width: 180px;
      }

      .location {
        font-weight: 400;
        font-size: 1.3em;
        margin-top: 8px;
      }

      .see-more-container {
        margin-top: 5px;
      }

      .see-more {
        font-size: 1.3em;
      }

  body
    .body
      block content
